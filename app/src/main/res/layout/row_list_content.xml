<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/cardView"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewContent"
                android:textSize="20sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imageViewlike"
                    android:src="@mipmap/like_icon"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imageViewShare"
                    android:src="@mipmap/ic_share_black_24dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imageViewHike"
                    android:src="@mipmap/facebook_icon_img"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/imageViewShare"
                    android:layout_marginEnd="61dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageViewwhatsapp"
                    android:src="@mipmap/whatsapp_icon"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imageViewCopy"
                    android:src="@mipmap/copy_image"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/imageViewwhatsapp"
                    android:layout_marginEnd="58dp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>